<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_category_lfc">
        <field name="name">LFC - Função</field>
        <field name="description">Função no sistema da Linha Fala Criança</field>
        <field name="visible" eval="True"/>
    </record>

    <record id="group_linhafala_administrador" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_lfc" />
        <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
    </record>

    <record id="group_linhafala_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="module_category_lfc" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_linhafala_supervisor_geral" model="res.groups">
        <field name="name">Supervisor Geral</field>
        <field name="category_id" ref="module_category_lfc" />
    </record>

    <record id="group_linhafala_gestor" model="res.groups">
        <field name="name">Gestor</field>
        <field name="category_id" ref="module_category_lfc" />
    </record>

    <record id="group_linhafala_conselheiro" model="res.groups">
        <field name="name">Conselheiro</field>
        <field name="category_id" ref="module_category_lfc" />
    </record>

    <record id="group_linhafala_gestor_externo" model="res.groups">
        <field name="name">Gestor Externo</field>
        <field name="category_id" ref="module_category_lfc" />
    </record>

    <record model="ir.module.category" id="module_category_lfc_jur">
        <field name="name">LFC - Jurisdição</field>
        <field name="description">Jurisdição dos funcionários</field>
        <field name="visible" eval="True"/>
    </record>

    <record id="group_linhafala_maputo" model="res.groups">
        <field name="name">Maputo</field>
        <field name="category_id" ref="module_category_lfc_jur" />
    </record>

    <record id="group_linhafala_manica" model="res.groups">
        <field name="name">Manica</field>
        <field name="category_id" ref="module_category_lfc_jur" />
    </record>

    <record id="group_linhafala_remoto" model="res.groups">
        <field name="name">Remoto</field>
        <field name="category_id" ref="module_category_lfc_jur" />
    </record>
    <record id="group_linhafala_supervisor_remoto" model="res.groups">
        <field name="name">Supervisor Remoto</field>
        <field name="category_id" ref="module_category_lfc_jur" />
    </record>
    <record id="group_linhafala_supervisor_maputo" model="res.groups">
        <field name="name">Supervisor Maputo</field>
        <field name="category_id" ref="module_category_lfc_jur" />
    </record>
    <record id="group_linhafala_supervisor_manica" model="res.groups">
        <field name="name">Supervisor Manica</field>
        <field name="category_id" ref="module_category_lfc_jur" />
    </record>

    <!-- Make groups visible to administrators -->
    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('base.group_system'))]"/>
    </record>

</odoo>