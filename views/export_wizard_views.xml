<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_export_chamadas_wizard_form" model="ir.ui.view">
    <field name="name">linhafala.export.chamadas.wizard.form</field>
    <field name="model">linhafala.export.chamadas.wizard</field>
    <field name="arch" type="xml">
      <form string="Exportar Chamadas">
        <group>
          <field name="start_date"/>
          <field name="end_date"/>
        </group>
        <footer>
          <button string="Exportar Chamadas" type="object" name="action_export" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_export_chamadas_wizard" model="ir.actions.act_window">
    <field name="name">Exportar Chamadas</field>
    <field name="res_model">linhafala.export.chamadas.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="view_id" ref="view_export_chamadas_wizard_form"/>
  </record>

  <!-- place menu under main root -->
  <menuitem id="menu_export_chamadas" name="Exportar Chamadas" parent="linhafala_menu_root" action="action_export_chamadas_wizard" sequence="20"/>
</odoo>
